extends layouts/main-layout.pug

block styles 
    link(rel="stylesheet", href="/css/products.css")

block content
    main
        if prods.length > 0
            div.grid
                each product in prods
                    article.card.product-item
                        header.card__header 
                            h1.product__title #{product.title}
                        div.card__image
                            img(src="", alt="") 
                        div.card__content
                            h2.product__price $19.99
                            p.product__description A very interesting book about so many interesting things! 
                        div.card__actions
                            button.btn Add to Cart
        else    
            h1 No Products